<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center p-3">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-centerjustify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
  </div>
  <div class="create-button">
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-warning"%>
  </div>
</div>

<div class="container">
  <div class="lists-grid">
    <% @lists.each do |list| %>
      <div class="list-card-white p-5 rounded">
        <h2><%= link_to list.name, list_path(list), class:"text-decoration-none text-black" %></h2>
        <br>
        <div class="small">
          <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
